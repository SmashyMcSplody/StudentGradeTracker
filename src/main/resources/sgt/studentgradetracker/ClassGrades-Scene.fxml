                        <TableColumn fx:id="finalGradeColumn" prefWidth="100.0" style="-fx-border-color: white; -fx-border-width: 0px 2px 0 0px 1px 0px 1pxpx 2px;" text="Final" />
                     </columns>
                  </TableView>
               </children>
            </Pane>
         </children>
      </HBox>
   </children>
